<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>
        {% block title %}Welcome!
        {% endblock %}
    </title>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <link href="app.css" rel="stylesheet">
    {% block stylesheets %}
    {% endblock %}

    <style>
        .front-circle {
            position: absolute;
            width: 100%;
            height: 100%;
            backface-visibility: hidden;
            pointer-events: all !important;
            cursor: pointer !important;
        }

        .back-circle {
            position: absolute;
            width: 100%;
            height: 100%;
            visibility: hidden;
            transform-origin: center;
            cursor: pointer;
        }

        .svg-container {
            width: 1000px;
            height: 1000px;
        }

        .card {
            cursor: pointer;
            transition: transform 1s;
            transform-style: preserve-3d;
            box-shadow: 0 8px 16px 0 rgba(0, 0, 0, 0.6);
            -webkit-transform-origin: center center;
            transform-origin: center center;
            transition: transform 0.6s;
        }

        .scene {
            display: inline-block;
            margin: 40px 0;
            perspective: 600px;
        }

        .card__face {
            position: absolute;
            width: 100%;
            height: 100%;
            line-height: 260px;
            color: white;
            text-align: center;
            backface-visibility: hidden;
            -webkit-transform-origin: center center;
            transform-origin: center center;
        }

        .card__face--front {
            background: crimson;
            z-index: 2;
        }

        .card__face--back {
            background: slateblue;
            transform: rotateY(180deg);
            z-index: 1;
        }

        .card {
            position: relative;
            width: 200px;
            height: 300px;
            perspective: 1000px;
        }

        .card__face {
            backface-visibility: hidden;
            transition: opacity 0.6s ease-in-out, visibility 0s ease-in-out 0.6s, transform 1s ease-in-out;
        }

        .card__face--front {
            visibility: visible;
            opacity: 1;
            transform: rotateY(0deg);
        }

        .card__face--back {
            visibility: hidden;
            opacity: 0;
            transform: rotateY(180deg);
        }

        .card.is-flipped .card__face--front {
            visibility: hidden;
            opacity: 0;
            transform: rotateY(270deg);
            transition: opacity 1s ease-in-out, visibility 0s ease-in-out 0.6s, transform 1s ease-in-out;
        }

        .card.is-flipped .card__face--back {
            visibility: visible;
            opacity: 1;
            transform: rotateY(0deg);
            transition: opacity 0.6s ease-in-out, visibility 0s ease-in-out, transform 0.6s ease-in-out;
        }
    </style>
</head>
<body>
    <div class="container-fluid g-0">
        {% if app.user and app.user.hasRole("ROLE_ADMIN") %}
            {% include 'navigation/admin.html.twig' %}
        {% elseif app.user and app.user.hasRole("ROLE_USER") %}
            {% include 'navigation/main.html.twig' %}
        {% endif %}

        {% block nav %}{% endblock %}

        <div class="container-fluid" style="margin-top: 2rem;">
            {% block body %}{% endblock %}
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            document.querySelectorAll('.card').forEach(function(card) {
                card.addEventListener('click', function() {
                    card.classList.toggle('is-flipped');
                });
            });

            document.querySelectorAll('.card').forEach(function (card) {
                card.addEventListener('click', function (e) {
                    e.preventDefault();
                    this.classList.toggle('flipped');
                });
            });

            const frontCircles = document.querySelectorAll('.front-circle');
            const backCircles = document.querySelectorAll('.back-circle');

            if (frontCircles.length !== backCircles.length) {
                console.error('Mismatched number of front and back circles.');
                return;
            }

            frontCircles.forEach((frontCircle, index) => {
                frontCircle.addEventListener('click', function () {
                    setTimeout(() => {
                        backCircles[index].style.visibility = 'visible';
                        frontCircle.style.visibility = 'hidden';
                    }, 500);
                });
            });

            backCircles.forEach((backCircle, index) => {
                backCircle.addEventListener('click', function() {
                    setTimeout(() => {
                        backCircle.style.visibility = 'hidden';
                        frontCircles[index].style.visibility = 'visible';
                    }, 500);
                });
            });
        });
    </script>
</body>
</html>
